@page "/projects-department"
@using RhinoTicketingSystem.Models.db_a79800_ticket
@inject db_a79800_ticketService db_a79800_ticketService

<PageTitle>Projects Department</PageTitle>

<RadzenRow Gap="1rem" Class="rz-p-4">
    @if (projects != null)
    {
        @foreach (var project in projects)
        {
            <RadzenColumn Size="12" SizeMD="6" SizeLG="3">
                <RadzenCard class="rz-mb-4 rz-pt-4 rz-pb-4"
                            Style="@($"border-left: 3px solid var(--rz-primary); cursor: pointer;")"
                            @onclick="@(() => OpenDocuments(project))">
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceBetween" Class="rz-mb-2">
                        <RadzenIcon Icon="business" Style="@($"font-size: 2rem; color: var(--rz-primary);")" />
                        @* <RadzenBadge BadgeStyle="BadgeStyle.Primary" Text="@project.ProjectBranch" /> *@
                    </RadzenStack>
                    <RadzenText TextStyle="TextStyle.Subtitle2" Class="rz-mb-1">@project.Name</RadzenText>
                    <RadzenText TextStyle="TextStyle.Caption">Created: @project.CreatedIn?.ToString("d")</RadzenText>
                </RadzenCard>
            </RadzenColumn>
        }
    }
</RadzenRow>

