@inject Microsoft.Extensions.Localization.IStringLocalizer<EditTblChartOfAccount> L
@page "/edit-tbl-chart-of-account"
@attribute [Authorize]

<PageTitle>Edit TblChartOfAccount</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save TblChartOfAccount</RadzenAlert>
        <RadzenTemplateForm TItem="RhinoTicketingSystem.Models.db_a79800_ticket.TblChartOfAccount" Data="@tblChartOfAccount" Visible="@(tblChartOfAccount != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Chart Id" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.ChartId" Name="ChartId" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="ChartId" Text="ChartId is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Chart Code" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.ChartCode" Name="ChartCode" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Chart Name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.ChartName" Name="ChartName" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Chart Full Name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.ChartFullName" Name="ChartFullName" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Account Level" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.AccountLevel" Name="AccountLevel" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Tbl Chart Of Account1" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@tblChartOfAccountsForParentAccount" TextProperty="ChartName" ValueProperty="ChartId" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.ParentAccount" Name="ParentAccount"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Accoutn Type" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.AccoutnType" Name="AccoutnType" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Direction" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.Direction" Name="Direction" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Ob" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.Ob" Name="Ob" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Date" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.Date" Name="Date" />
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Connected With Contact" Component="IsConnectedWithContact" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@tblChartOfAccount.IsConnectedWithContact" Name="IsConnectedWithContact" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Connected With Cost Center" Component="IsConnectedWithCostCenter" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@tblChartOfAccount.IsConnectedWithCostCenter" Name="IsConnectedWithCostCenter" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Connected With Business Type" Component="IsConnectedWithBusinessType" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@tblChartOfAccount.IsConnectedWithBusinessType" Name="IsConnectedWithBusinessType" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Manual Journal Not Allowed" Component="IsManualJournalNotAllowed" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@tblChartOfAccount.IsManualJournalNotAllowed" Name="IsManualJournalNotAllowed" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Connected With Project" Component="IsConnectedWithProject" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@tblChartOfAccount.IsConnectedWithProject" Name="IsConnectedWithProject" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenFormField Text="Financial Statement Classification Group Id" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.FinancialStatementClassificationGroupId" Name="FinancialStatementClassificationGroupId" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Accounting Serial" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblChartOfAccount.AccountingSerial" Name="AccountingSerial" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

