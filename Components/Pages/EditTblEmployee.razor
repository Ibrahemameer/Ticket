@inject Microsoft.Extensions.Localization.IStringLocalizer<EditTblEmployee> L
@page "/edit-tbl-employee"
@attribute [Authorize]

<PageTitle>Edit TblEmployee</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save TblEmployee</RadzenAlert>
        <RadzenTemplateForm TItem="RhinoTicketingSystem.Models.db_a79800_ticket.TblEmployee" Data="@tblEmployee" Visible="@(tblEmployee != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Personnel Number" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tblEmployee.PersonnelNumber" Name="PersonnelNumber" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblEmployee.Name" Name="Name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Sector" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblEmployee.Sector" Name="Sector" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Site" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblEmployee.Site" Name="Site" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Center" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblEmployee.Center" Name="Center" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Email" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblEmployee.Email" Name="Email" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

