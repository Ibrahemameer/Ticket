@inject Microsoft.Extensions.Localization.IStringLocalizer<EditTblReassignTicket> L
@page "/edit-tbl-reassign-ticket"
@attribute [Authorize]

<PageTitle>Edit TblReassignTicket</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save TblReassignTicket</RadzenAlert>
        <RadzenTemplateForm TItem="RhinoTicketingSystem.Models.db_a79800_ticket.TblReassignTicket" Data="@tblReassignTicket" Visible="@(tblReassignTicket != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Tbl Ticket" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@tblTicketsForTicketId" TextProperty="TicketNumber" ValueProperty="TicketId" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@tblReassignTicket.TicketId" Name="TicketId"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Tbl Engineer" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@tblEngineersForEngineerId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@tblReassignTicket.EngineerId" Name="EngineerId"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Reassigned By" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblReassignTicket.ReassignedBy" Name="ReassignedBy" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Reassigned Date" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tblReassignTicket.ReassignedDate" Name="ReassignedDate" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Problem Description" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblReassignTicket.ProblemDescription" Name="ProblemDescription" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Tbl Status" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@tblStatusesForStatusId" TextProperty="Description" ValueProperty="StatusId" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@tblReassignTicket.StatusId" Name="StatusId"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="User Email" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tblReassignTicket.UserEmail" Name="UserEmail" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

